<Window x:Class="CallinanBankAtm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Callinan Bank ATM" Height="620" Width="960" Background="#F9FAFB">
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <TextBlock Text="Callinan Bank ATM" FontSize="24" FontWeight="Bold" Margin="0,0,0,8" />
            <TextBlock Text="Secure login and quick access to account types." Foreground="#4B5563" Margin="0,0,0,16" />

            <GroupBox Header="Sign In" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Username" />
                    <TextBox x:Name="LoginUsernameTextBox" />
                    <TextBlock Text="PIN" />
                    <PasswordBox x:Name="LoginPinBox" />
                    <Button Content="Sign In" Click="OnLoginClicked" />
                    <TextBlock x:Name="LoginStatusText" Foreground="#DC2626" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Create Customer" Padding="12">
                <StackPanel>
                    <TextBlock Text="Full Name" />
                    <TextBox x:Name="RegisterFullNameTextBox" />
                    <TextBlock Text="Username" />
                    <TextBox x:Name="RegisterUsernameTextBox" />
                    <TextBlock Text="PIN" />
                    <PasswordBox x:Name="RegisterPinBox" />
                    <Button Content="Create Profile" Click="OnRegisterClicked" />
                    <TextBlock x:Name="RegisterStatusText" Foreground="#16A34A" />
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E5E7EB" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Account Overview" FontSize="20" FontWeight="Bold" />
                <TextBlock x:Name="WelcomeText" Text="Sign in to view account types." Foreground="#6B7280" Margin="0,4,0,16" />
                <ListView x:Name="AccountTypesList" Height="360">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="â€¢" FontSize="18" Foreground="#1E3A8A" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding}" FontSize="14" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Content="Refresh Account Types" Click="OnRefreshClicked" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
