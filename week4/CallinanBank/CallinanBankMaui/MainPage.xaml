<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CallinanBankMaui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F9FAFB"
    Title="Callinan Bank Mobile">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="24">
            <Label Text="Welcome to Callinan Bank" FontSize="24" FontAttributes="Bold" />
            <Label Text="Manage your profile and review your account types." FontSize="14" TextColor="#4B5563" />

            <Frame>
                <VerticalStackLayout Spacing="12">
                    <Label Text="Existing Customer" FontAttributes="Bold" FontSize="16" />
                    <Entry x:Name="LoginUsernameEntry" Placeholder="Username" />
                    <Entry x:Name="LoginPinEntry" Placeholder="PIN" IsPassword="True" Keyboard="Numeric" />
                    <Button Text="Sign In" Clicked="OnLoginClicked" />
                    <Label x:Name="LoginStatusLabel" TextColor="#DC2626" FontSize="12" />
                </VerticalStackLayout>
            </Frame>

            <Frame>
                <VerticalStackLayout Spacing="12">
                    <Label Text="New Customer" FontAttributes="Bold" FontSize="16" />
                    <Entry x:Name="RegisterFullNameEntry" Placeholder="Full name" />
                    <Entry x:Name="RegisterUsernameEntry" Placeholder="Choose a username" />
                    <Entry x:Name="RegisterPinEntry" Placeholder="Create a PIN" IsPassword="True" Keyboard="Numeric" />
                    <Button Text="Create Profile" Clicked="OnRegisterClicked" />
                    <Label x:Name="RegisterStatusLabel" TextColor="#16A34A" FontSize="12" />
                </VerticalStackLayout>
            </Frame>

            <Frame>
                <VerticalStackLayout Spacing="12">
                    <Label Text="Your Accounts" FontAttributes="Bold" FontSize="16" />
                    <Label x:Name="WelcomeLabel" Text="Sign in to view account types." TextColor="#6B7280" />
                    <CollectionView x:Name="AccountTypesView">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*" Padding="8">
                                    <Label Text="â€¢" FontSize="20" TextColor="#1E3A8A" />
                                    <Label Grid.Column="1" Text="{Binding}" FontSize="14" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
